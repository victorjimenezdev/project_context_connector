{
    "name": "drupal/project_context_connector",
    "description": "Exposes sanitized, read-only JSON endpoints and a Drush command with Drupal project context for Slack/Teams prompt building.",
    "type": "drupal-module",
    "license": "GPL-2.0-or-later",
    "keywords": [
        "drupal",
        "observability",
        "project context",
        "json",
        "slack",
        "teams",
        "drush"
    ],
    "require": {
        "php": "^8.1 || ^8.2 || ^8.3"
    },
    "require-dev": {
        "drupal/core": "^10.3 || ^11",
        "drupal/core-dev": "^10.3 || ^11",
        "drupal/coder": "^8.3",
        "phpstan/phpstan": "^1.11",
        "mglaman/phpstan-drupal": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "Drupal\\project_context_connector\\": "src/"
        }
    },
    "extra": {
        "drupal": {
            "core": "^10 || ^11"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
